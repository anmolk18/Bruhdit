<% content_for :head do %>
<head>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" type="text/css" rel="stylesheet">
<%= stylesheet_link_tag "inbox" %>
</head>
<%end%>

<%= render '/conversations/navbar'%>
<% content_for :page_container do %>

<!-- Page Container -->

<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">    
  <div class="container">
<h3 class=" text-center">Messaging</h3>
<div class="messaging">
      <div class="inbox_msg">
        <div class="inbox_people">
          <div class="headind_srch">
            <div class="recent_heading">
              <h4>Messaged Users</h4>
            </div>
          </div>
          <div class="inbox_chat">
            <% alt_user = @conversation.other_user(@current_user)%>
            <div class="chat_list active_chat">
              <div class="chat_people">
                <div class="chat_img"> <img src=<%=alt_user.image%> alt="Avatar"> </div>
                <div class="chat_ib">
                  <h5> <%= alt_user.user_name %> <span class="chat_date">Dec 25</span></h5>
                </div>
              </div>
            </div>
            
            <% @chats.each do |chat|%>
              <div class="chat_list">
              <div class="chat_people">
                <div class="chat_img"> <img src=<%=chat.other_user(@current_user).image%> alt="Avatar"> </div>
                <div class="chat_ib">
                  <h5><%=link_to(chat.other_user(@current_user).user_name, conversation_messages_path(chat))%> <span class="chat_date">Dec 25</span></h5>
                </div>
              </div>
            </div>
            <%end%>            
          </div>
        </div>
        <% @chat = @conversation%>
        
        <%= render 'messages/log'%>
      
    </div></div>
<!-- End Page Container -->
</div>
<br>

<%end%>